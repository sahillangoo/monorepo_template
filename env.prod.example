# Production Environment Variables
# Copy this file to .env.prod and fill in your actual values

# Database
POSTGRES_DB=ecommerce_prod
POSTGRES_USER=ecommerce_user
POSTGRES_PASSWORD=your_secure_production_password
DATABASE_URL=postgresql://ecommerce_user:your_secure_production_password@postgres:5432/ecommerce_prod

# Redis
REDIS_URL=redis://redis:6379

# Server
NODE_ENV=production
PORT=3001
SERVER_PORT=3001

# JWT
JWT_SECRET=your_super_secure_jwt_secret_key_for_production

# Stripe
STRIPE_SECRET_KEY=sk_live_your_stripe_live_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_live_publishable_key

# Razorpay
RAZORPAY_KEY_ID=your_live_razorpay_key_id
RAZORPAY_KEY_SECRET=your_live_razorpay_key_secret

# Client
NEXT_PUBLIC_API_URL=https://yourdomain.com
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_live_publishable_key

# Domain
DOMAIN=yourdomain.com
