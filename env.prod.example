# Production Environment Variables
# Copy this file to .env.prod and fill in your actual values

# Database
POSTGRES_DB=ecommerceappdb
POSTGRES_USER=root
POSTGRES_PASSWORD=deadlock1
DATABASE_URL="postgresql://root:deadlock1@localhost:5432/ecommerceappdb"

# Redis
REDIS_URL=redis://redis:6379

# Server
NODE_ENV=production
PORT=3001
SERVER_PORT=3001

# JWT
JWT_SECRET=your_super_secure_jwt_secret_key_for_production

# Stripe
STRIPE_SECRET_KEY=sk_live_your_stripe_live_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_live_publishable_key

# Razorpay
RAZORPAY_KEY_ID=your_live_razorpay_key_id
