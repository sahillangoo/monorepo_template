# Development Environment Variables
# Copy this file to .env.dev and fill in your actual values

# Database
POSTGRES_DB=ecommerce_dev
POSTGRES_USER=ecommerce_user
POSTGRES_PASSWORD=ecommerce_password
DATABASE_URL=postgresql://ecommerce_user:ecommerce_password@localhost:5432/ecommerce_dev

# Redis
REDIS_URL=redis://localhost:6379

# Server
NODE_ENV=development
PORT=3001
SERVER_PORT=3001

# JWT
JWT_SECRET=dev_jwt_secret_key_change_in_production

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Razorpay
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Client
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Email (if using email service)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"


# Optional: PhonePe
PHONEPE_MERCHANT_ID="your-phonepe-merchant-id"
PHONEPE_SALT_KEY="your-phonepe-salt-key"
PHONEPE_SALT_INDEX="1"
PHONEPE_ENV="SANDBOX"  # or PRODUCTION
