{
  "name": "monorepo_ecommerce",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:client": "turbo run dev --filter=client",
    "dev:server": "turbo run dev --filter=server",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,js,jsx}\"",
    "check-types": "turbo run check-types",
    "db:generate": "turbo run db:generate --filter=server",
    "db:push": "turbo run db:push --filter=server",
    "db:migrate": "turbo run db:migrate --filter=server",
    "db:studio": "turbo run db:studio --filter=server",
    "clean": "turbo run clean && rm -rf node_modules",
    "setup": "bun install && turbo run build"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.20",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
